    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
    <style>
        th {
      cursor: pointer;
    }
  </style>
    <script>
       $(document).ready(function() {
    var sorted = true;
    $('#grid').click(function(e) {
        sorted = !sorted;
        var grid = $('#grid');
        if (e.target.tagName != 'TH') return;
        sortGrid(e.target.cellIndex, e.target.getAttribute('data-type'), sorted);
    });

    function sortGrid(colNum, type) {
        var tbody = grid.getElementsByTagName('tbody')[0];
        var rowsArray = [].slice.call(tbody.rows);
        var compare;
        switch (type) {
            case 'number':
                compare = function(rowA, rowB) {
                    if (sorted)
                        return rowA.cells[colNum].innerHTML - rowB.cells[colNum].innerHTML;
                    else
                        return rowB.cells[colNum].innerHTML - rowA.cells[colNum].innerHTML;
                };
                break;
            case 'string':
                compare = function(rowA, rowB) {
                    if (sorted){
                        if (rowA.cells[colNum].innerHTML.toLowerCase() > rowB.cells[colNum].innerHTML.toLowerCase())
                            return -1;
                        else
                            return 1;
                    }
                    else{
                        if (rowA.cells[colNum].innerHTML.toLowerCase() < rowB.cells[colNum].innerHTML.toLowerCase())
                            return -1;
                        else
                            return 1;
                    }
                };
                break;
        }
        rowsArray.sort(compare);
        grid.removeChild(tbody);
        for (var i = 0; i < rowsArray.length; i++) {
            tbody.appendChild(rowsArray[i]);
        }
        grid.appendChild(tbody);

    }
});

  </script>
</head>

<body>
    <div>
        <% include blocks/header.ejs %>
    </div>
    <div style="padding-left: 30px; width:25%"><br>
        <h1>Check Item</h1> <br>
    </div>
    <form name="searchRequest" method="POST">
        <div style="padding-left: 30px; width:60%" class="row">
            <div class="col-md-3"><label>I`m looking for</label></div>
            <div class="col-md-4"><input class="form-control" type="text" name="keyword"></div>
            <div class="col-md-3"><button id="search" type="submit" class="btn btn-info">Search</button></div>
        </div>
    </form>
    <div id="searchResults">
        <div class="container-fluid table-responsive" style="margin-top: 20px">
            <table id="grid" class="table table-hover table-striped">
                <thead class=" thead-dark">
                    <tr>
                        <th data-type="number" >#  <i class="fa fa-sort"></i></th>
                        <th data-type="string" >Product name  <i class="fa fa-sort"></th>
                        <th data-type="number" >Price  <i class="fa fa-sort"></th>
                        <th data-type="string" >Shop  <i class="fa fa-sort"></th>
                        <th>Time added</th>
                        <th data-type="string" >Category  <i class="fa fa-sort"></th>
                        <th>Comment</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (items.length<1 ) { %>
                    <tr>
                        <td>Nothing to show</th>
                    </tr>
                    <% } else { %>
                    <% for (i=0;i < items.length; i++ ) { %>
                    <tr>
                        <td>
                            <%=i+1%>
                        </td>
                        <td>
                            <%= items[i].name %>
                        </td>
                        <td>
                            <%= items[i].price %>
                        </td>
                        <td>
                            <%= items[i].shop %>
                        </td>
                        <td>
                            <%= items[i].time %>
                        </td>
                        <td>
                            <%= items[i].category %>
                        </td>
                        <td>
                            <%= items[i].comment %>
                        </td>
                        <td><a href=<%='/editPost/' +items[i]._id %>><span class="fa fa-edit"></span></a></td>
                        <td><a href=<%='/deletePost/' +items[i]._id %>><span class="fa fa-trash"></span></a></td>
                    </tr>
                    <% } %>
                    <% } %>
                </tbody>
        </div>
    </div>
</body>

</html>